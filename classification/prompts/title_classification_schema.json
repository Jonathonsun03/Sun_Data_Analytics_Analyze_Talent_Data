{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["items"],
  "additionalProperties": false,
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["video_id", "confidence", "classification"],
        "additionalProperties": false,
        "properties": {
          "video_id": {
            "type": "string",
            "minLength": 1
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "classification": {
            "type": "object",
            "required": ["topic", "format", "language", "is_music", "tags"],
            "additionalProperties": false,
            "properties": {
              "topic": {
                "type": "string",
                "enum": [
                  "music",
                  "gaming",
                  "lifestyle",
                  "education",
                  "news_commentary",
                  "comedy",
                  "sports",
                  "technology",
                  "other"
                ]
              },
              "format": {
                "type": "string",
                "enum": [
                  "short_form",
                  "long_form",
                  "live_stream",
                  "podcast_style",
                  "highlight",
                  "other"
                ]
              },
              "language": {
                "type": "string",
                "enum": [
                  "en",
                  "es",
                  "pt",
                  "fr",
                  "de",
                  "ja",
                  "ko",
                  "other",
                  "unknown"
                ]
              },
              "is_music": {
                "type": "boolean"
              },
              "tags": {
                "type": "array",
                "maxItems": 5,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    }
  }
}
